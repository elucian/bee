+--------------------------
|  array traversal demo    |
+--------------------------+
load $pro_lib.console:(*);
 
** array with 10 elements
a ∈ [Z](10);   
i := 0; --control variable

rule main:
  ** array initialization
  
  for ∀ i ∈ (0..9) do
     a[i] := i; 
  repeat;
  
  ** array traversal and print
  for ∀ i ∈ (0.!10) do
     print " a[#(n)] = #(n)" ? (i, a[i]);
  repeat;
return; 
#end of module