+------------------------
  Rule as parameter
------------------------+

-- declare rule with rule "cmp" as parameter
rule compare(a,b ∈ Z, cmp @ (Z,Z) ∈ L) => (r ∈ L):
  alter r := cmp(a,b);
rule;

-- declare a rule:
rule lt(a,b ∈ Z) => (a < b) ∈ L;
make test ∈ L

-- delegate using rule "lt"
alter test := compare(1,2,cmp::lt);
print test; -- expect 1

-- delegate using anonymous rule
alter test := compare(1, 2, cmd:: (a,b) => (a ≥ b));
print test; -- expect 1

over;
