+---------------------------------
  High order functor demos
----------------------------------+
#driver "ho" 

** create a rule factory
 
-- this functor can make a rule
functor shift(i ∈ Z) => g(s ∈ Z):
  make g(s ∈ Z) => (s + i) ∈ Z;
functor shift;

-- make two define instances
make inc := shift(+1);  -- increment 
make dec := shift(-1);  -- decrement 

-- test define inc
print inc(-10); --> 9
print inc(10);  --> 11
-- test define dec
print dec(20); --> 19
print dec(19); --> 18
over;