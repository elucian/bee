+----------------------------------
    Demonstrate while statement
-----------------------------------+
#driver "cy"
-- declare array of 10 Words
create a ∈ [Z](10);
-- use while 
create i ∈ Z; 
while:
  modify a[i] := i;
  do if (i = 9):
    stop;
  else
    modify i += 1;
    repeat;
  done;
while;
-- while shortcut
create x := 10;
while (x ≥ 0):
  do if (x % 2 = 0):
    modify x -= 1;
  else
    print x;    
  done;  
  modify x -= 1;
while;  
over;