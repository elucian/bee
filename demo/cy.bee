+----------------------------------
    Demonstrate while statement
-----------------------------------+
#driver "cy"
-- declare array of 10 Words
make a @ [Z](10);
-- use while 
make i ∈ Z; 
while (i < 10):
  alter a[i] := i;
  alter i += 1;
while;
-- while shortcut
make x := 10;
while (x ≥ 0):
  when (x % 2 = 0):
    alter x -= 1;
  else:
    print x;    
  when;  
  alter x -= 1;
while;  
over;