+----------------------------------
 Demo for two repetitive statements
-----------------------------------+
#role := "driver";
#name := "cy";

** declare array of 10 integers
make a ∈ [Z](10);

**  use cycle repetitive statement
make i := 0 ∈ Z;
cycle
  alter a[i] := i;
  exit if (i = 9);
  alter i += 1;
repeat;

**  use while repetitive statement
make x := 10;
while (x ≥ 0) do
  when (x % 2 = 0) do
    alter x -= 1;
  else
    print x;
  done;
  alter x -= 1;
repeat;

over. ** end of driver
