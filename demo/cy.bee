+----------------------------------
    Demonstrate while statement
-----------------------------------+
#driver "cy"
-- declare array of 10 Words
make a @ [Z](10)
-- use while 
make i ∈ Z
while (i < 10)
  alter a[i] := i
  alter i += 1
repeat
-- while shortcut
make x := 10
while (x ≥ 0) do
  when (x % 2 = 0) do
    alter x -= 1
  else
    print x
  done
  alter x -= 1
repeat
over.