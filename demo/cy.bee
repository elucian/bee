+----------------------------------
    Demonstrate cycle statement
-----------------------------------+
#driver "cy"
-- declare array of 10 Words
create a ∈ [Z](10);
-- use cycle 
create i ∈ Z; 
cycle:
  modify a[i] := i;
  when (i = 9):
    stop;
  else:
    modify i += 1;
    loop;
  when;
cycle;
-- cycle shortcut
create x := 10;
cycle:
  when (x % 2 = 0):
    modify x -= 1;
    loop;
  when;  
  print x;
  
  when (x < 0):
    stop;
  else:
    modify x -= 1;
  when;
cycle;  
over;