+----------------------------------
    Demonstrate cycle statement
-----------------------------------+
#driver "cy"

-- declare array of 10 Words
value a ∈ [Z](10);

-- use cycle 
value i ∈ Z; 
cycle:
  alter a[i] := i;
  when (i = 9):
    stop;
  else:
    alter i += 1;
    loop;
  when;
cycle;

-- cycle shortcut
value x := 10;
cycle:
  when (x % 2 = 0):
    alter x -= 1;
    loop;
  when;  
  print x;
  
  when (x < 0):
    stop;
  else:
    alter x -= 1;
  when;
cycle;  

over;