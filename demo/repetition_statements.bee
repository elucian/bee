load $pro_lib.console.(*);

rule main():
  ** rule context
  make x,y:10 âˆˆ Z; 
  
  ** local context
  local:
    make  x := 1       
  do
    ** inner context shadow external "x"
    alter y := 5;
    alter x += 2;
    print x, y; // 3, 5
  done;
  print x, y; // 10, 5
  ** repetitive block without "with"
  do
    write x + ',';  // write in buffer
    alter x -= 1;   // decrement
  cycle if x > 0;
  write x; // write 0 the last value
  print;   // expected: 10,8,7,6,5,4,3,2,1,0
return;

#end of module
