+-----------------------------------
  declare and use an expression method
-----------------------------------+
load $pro_lib.console:(*);

** lambda expression
make add := λ(a, b ∈ Z) ∈ Z => (a + b);

method main():
   ** use lambda expression with print
   print add(1, 2);    // print 3
   print add(-10, 10); // print 0
   
   ** recursive lambda expression
   make fac:= λ(n ∈ N) ∈ N => (1 if n = 0, fac(n-1));
   pass if fac(3) = 6;
return;
#end of module
