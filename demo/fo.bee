+--------------------------------
 open a file and write into it. 
--------------------------------+
driver fo:

load $pro_lib.console.(*);

** initialize the system library 
load io   := $bee.system.io:(*);
load con  := $bee.system.console:(*);

make file := io.open('foo.txt','+w');
** write into the file using put
apply file.print("Hello World!");

** read the entire content from file
make  content := file.read() âˆˆ W;
apply file.close;
** display the entire content to console
write content;
print;
 
over.
