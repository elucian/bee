+------------------------------
   global variables are public
   use prefix @ and lowercase
------------------------------+
load $pro_lib.console:(*);

** declare a share variable x
make @x := 1;

** use global variable x in method "add1"
** since add has not parameters and no result
** it is just a simple method declaration
method add1:
  alter @x += 1;
  print @x;
return;


method add2: 
  make  x := 0;     // make a variable x 
  alter x := x + 1; // increment local variable
  print x;          // print local x
return;

method main():
  ** call a subroutine by name
  apply add1; // print 2
  apply add1; // print 3
  apply add1; // print 4
  print x;    // expect 4    
  ** variable shadowing
  apply add2; // print 1
  apply add2; // print 1
  apply add2; // print 1
  print x;    // x remain 4
return;
 
#end of module
