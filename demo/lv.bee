+-------------------------------------------
   demo for local variable site-effect
-------------------------------------------+
#driver "lv"
-- local variable
make x := 1;
-- rule side-effects
rule add:
  alter x := x + 1;
  print x;
rule;
apply add; -- will print 2
apply add; -- will print 3
print x; -- x = 3 (is modified)
-- changing x influence rule
alter x := 0;  -- make x make 
apply add;   -- will print 1
apply add;   -- will print 2
print x; -- x = 2 (modified)
over.