+-------------------------------------------
   demo for local variable site-effect
-------------------------------------------+
#driver "lv"
-- local variable
make x := 1;
-- method side-effects
define add:
  alter x := x + 1;
  print x;
define;
add; -- will print 2
add; -- will print 3
print x; -- x = 3 (is modified)
-- changing x influence method
alter x := 0;  -- make x make 
add;   -- will print 1
add;   -- will print 2
print x; -- x = 2 (modified)
over;