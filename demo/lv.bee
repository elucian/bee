+-------------------------------------------
   demo for local variable site-effect
-------------------------------------------+
#driver "lv"
-- local variable
make x := 1;
-- aspect side-effects
aspect add:
  alter x := x + 1;
  print x;
aspect;
solve add; -- will print 2
solve add; -- will print 3
print x; -- x = 3 (is modified)
-- changing x influence aspect
alter x := 0;  -- make x make 
solve add;   -- will print 1
solve add;   -- will print 2
print x; -- x = 2 (modified)
over;