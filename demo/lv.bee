+-------------------------------------------
   demo for local variable site-effect
-------------------------------------------+
#driver "lv"
-- local variable
create x := 1;
-- method side-effects
define add:
  modify x := x + 1;
  print x;
define;
add; -- will print 2
add; -- will print 3
print x; -- x = 3 (is modified)
-- changing x influence method
modify x := 0;  -- create x create 
add;   -- will print 1
add;   -- will print 2
print x; -- x = 2 (modified)
over;