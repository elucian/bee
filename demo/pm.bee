+----------------------------
  pattern matching
----------------------------+
#driver "pm"

-- pattern matching method
pm(p1,p2 ε N) => (r ε N):
  let r := ( 
       0 if (p1 = 0 )
      ,1 if (p2 = 0 ) 
      ,2 if (p1 = p1) 
      ,3 if (p2 > p2)
      ,4 );
pm; 

-- execute both methods
put pm(0,10);  -- will print 0

write;
