load $pro_lib.console.(*);

** declare Fibonacci rule
rule fib(n ∈ N) => (y ∈ N):
  if (n = 1) ∨ (n = 0) do
    y := 1; -- first value
  else     
    y := fib(n-1) + fib(n-2);
  done;
return;

rule main:
   ** call fib rule using argument 5
   r := fib(n: 5);
   
   ** print the result to console
   print r;
return;
