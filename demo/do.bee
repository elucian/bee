+-----------------------------------------
       repetitive statement demo
-----------------------------------------+
#driver "do"
create a := [Z](10);      -- array of 10 Words
create n := a.count()-1; -- index of last element
-- use range for iteration
create i ∈ [0..n];
while (i ≤ n):
   print ('r[{0}] := {1}' <+ (i, a[i]));
   modify i += 1;
while;
over;