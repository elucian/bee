#driver "do"
new a := [Z](10);      -- array of 10 Words
new n := a.count()-1; -- index of last element

-- use range for iteration
new i Îµ [0..n];
cycle
   put ('r[{0}] := {1}' <+ (i, a[i]));
   stop if (i = n);
   let i += 1;
cycle;
write;

