+----------------------------------
  declare and use a function
----------------------------------+
#driver "fn"
** simple function
function add(a, b ∈ Z) => (a + b) ∈ Z;
-- call function
print add(1, 2);     -- print 3
print add(-10, 10);  -- print 0

** recursive function
function  fac(n ∈ N) => (1 if n = 0, fac(n-1)) ∈ N;
print fac(3); -- expect 6
 
over;