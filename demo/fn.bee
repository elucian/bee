+----------------------------------
  declare and use a λ function
 ---------------------------------+
#driver "fn"

** simple λ function
new add λ (a, b ε Z) ε Z => (a + b);

-- call λ function add
put add(1, 2);     -- print 3
put add(-10, 10);  -- print 0
write;

** recursive function
new fac λ (n ε N) ε N => (1 if n = 0, fac(n-1));
put fac(3); -- expect 6
write; 
 
over;