+----------------------------------
  declare and use a λ expression
----------------------------------+
#driver "fn"

** simple λ expression
rule add λ (a, b ∈ Z) ∈ Z => (a + b);

-- call λ expression add
print add(1, 2);     -- print 3
print add(-10, 10);  -- print 0


** recursive expression
rule  fac λ (n ∈ N) ∈ N => (1 if n = 0, fac(n-1));
print fac(3); -- expect 6
 
 
over;