+-----------------------------------
 demonstrate main rule
------------------------------------+
# main rule is mandatory in drivers
rule main(*params ∈ (S)):
  ** read the number of parameters
  c := params.count;
  panic if (c = 0);
  
  ** print comma separated parameters
  cycle:
    i:= 0 ∈ Z;
  while (i < c) do
    write params[i];
    i += 1;
    write "," if (i < c);
  repeat;
  ** print the buffer to console
  print;  
return;