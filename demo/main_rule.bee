+-----------------------------------
 demonstrate a driver with main rule
------------------------------------+
driver main_rule:

# main rule is mandatory in drivers
rule main(*params ∈ S):
   ** read the number of parameters
   make c := params.count;
   panic if (c = 0);
   
   ** print comma separated parameters
   make i:= 0 ∈ Z;
   if (i < c) do
     write params[i];
     alter i += 1;
     write "," if (i < c);
   cycle;
   ** print the buffer to console
   print;  
return;