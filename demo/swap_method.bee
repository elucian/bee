+---------------------------
|     Swap rule demo       |
---------------------------+
load $pro_lib.console:(*);

rule swap(x, y ∈ [Z]):
   ** create temporary value
   t := x; 
   
   ** swap the values
   y := x;
   x := t; 
return;

rule main:
   (a: 1, b: 2) ∈ Z;
   print "a = #(n), b = #(n)" ? (a,b);
   ** swap to variables using single statement
   a := b, b := a; 
   print "a = #(n), b = #(n)" ? (a,b); --a = 2, b = 1
   ** swap to variables using swap rule
    swap(a, b); 
   print "a = #(n), b = #(n)" ? (a,b); --a = 1, b = 2   
return;
#end of module