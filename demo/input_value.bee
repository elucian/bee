load $pro_lib.console:(*);

rule main():
  make a ∈ N;
  print "to stop enter 0";
  while (a ≠ 0) do
    write "enter a number ≠ 0:"
    read  a, "#(n)";
    print ("you have enter #(n)" ? a);
  cycle;
return;

